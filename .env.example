# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_characters_long
JWT_EXPIRES_IN=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM="Meet Platform <noreply@meet.com>"

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=5

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Socket.io Configuration (Sprint 2)
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# STUN Server Configuration (Sprint 3 & 4)
STUN_SERVER_1_HOST=0.0.0.0
STUN_SERVER_1_PORT=3478
STUN_SERVER_2_HOST=0.0.0.0
STUN_SERVER_2_PORT=3479

# TURN Server Configuration (Optional)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_credential

# OpenAI Configuration (for AI summaries - Sprint 3)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Peer.js Server Configuration (Sprint 3 & 4)
PEER_SERVER_HOST=localhost
PEER_SERVER_PORT=9000
PEER_SERVER_PATH=/peerjs
